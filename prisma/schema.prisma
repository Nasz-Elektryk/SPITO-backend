generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  username String
  password String
  avatar               Bytes?
  banner               Bytes?
  description          String?
  Roles    Roles[]
}

model Roles {
  id     Int  @id @default(autoincrement())
  role   Role @default(USER)
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  VERIFIED_USER
  USER
}
